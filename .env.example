# Server Configuration
PORT=8000
APPID=8000

# MongoDB Atlas Configuration
# Get these from your MongoDB Atlas cluster dashboard
DBUSERNAME=your_mongodb_username
DBPASSWORD=your_mongodb_password
DBNAME=ride_matching_db
DBLINK=your_cluster_name.mongodb.net

# Example MongoDB connection string:
# mongodb+srv://username:password@cluster.mongodb.net/ride_matching_db?retryWrites=true&w=majority

# Redis Configuration
# Local Redis: redis://localhost:6379
# Redis Cloud: redis://username:password@host:port
REDIS_URL=redis://default:your_redis_password@redis-host:6379

# Environment
NODE_ENV=development

# Optional: Rate Limiting (for future use)
# RATE_LIMIT_WINDOW=15
# RATE_LIMIT_MAX_REQUESTS=100

# Optional: JWT Secret (for future authentication)
# JWT_SECRET=your_secret_key_here

